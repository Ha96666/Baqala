<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ManageUser">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="33dp"
        android:layout_marginTop="46dp"
        android:text="User Name" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_marginTop="99dp"
        android:text="E-mail" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_marginTop="154dp"
        android:text="Phone Number" />

    <EditText
        android:id="@+id/etPhone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignStart="@+id/etName"
        android:ems="10"
        android:hint="Enter your phone number"
        android:inputType="text"
        android:text=""
        android:textSize="14sp" />

    <EditText
        android:id="@+id/etMail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignStart="@+id/etName"
        android:ems="10"
        android:hint="Enter your e-mail eddress"
        android:inputType="textEmailAddress"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/etName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="90dp"
        android:ems="10"
        android:hint="Enter your name"
        android:inputType="text"
        android:text=""
        android:textSize="14sp" />

    <Button
        android:id="@+id/btnAdduser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="183dp"
        android:onClick="doAdd"
        android:text="Add User" />

    <Button
        android:id="@+id/btnUpdateuser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btnAdduser"
        android:layout_marginTop="-2dp"
        android:layout_toStartOf="@+id/btnShop"
        android:onClick="doUpdate"
        android:text="Update User" />

    <Button
        android:id="@+id/btnDeleteuser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btnAdduser"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="29dp"
        android:onClick="doDelete"
        android:text="Delete user" />

    <Button
        android:id="@+id/btnFindByName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btnAdduser"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="112dp"
        android:onClick="doFind"
        android:text="Find User By Name" />

    <Button
        android:id="@+id/btnViewallusers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btnFindByName"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="68dp"
        android:onClick="ShowDatabase"
        android:text="View All users" />

    <Button
        android:id="@+id/btnShop"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:onClick="Goshop"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="22dp"
        android:text="Start shoping" />

</RelativeLayout>